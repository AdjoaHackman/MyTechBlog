<!-- Loop over each user object -->
<h1>Welcome to the Tech Blog</h1>
<p>Explore the latest posts and updates.</p>

{{#each posts as |post| }}
<a href="/post/{{post.id}}">
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <!-- Render user-specific data with Handlebars.js expressions -->
      <h2>{{{get_emoji}}} {{post.username}}</h2>
      <h2>{{post.title}}</h2>
      <h2>{{post.dateCreation}}</h2>
    </div>
    <div class="col-md-6">
    </div>
  </div>
</a>
{{/each}}